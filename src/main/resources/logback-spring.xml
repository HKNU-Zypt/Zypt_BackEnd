<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

        <!-- Spring Boot 색상 로그 지원 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter"/>

        <!-- 콘솔 출력 설정 -->
    <appender  name = "CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                [%d{yyyy-MM-dd HH:mm:ss, Asia/Seoul}:%-3relative] %clr(%-5level) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(reqUri=%X{requestURI}) %clr(reqId=%X{requestId}){yellow}:   [msg]: %msg%n
            </pattern>
        </layout>
    </appender>

    <!-- 파일 로그 (Rolling Policy 전용)-->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/myapp/app.log</file>
        <encoder>
            <pattern>
                [%d{yyyy-MM-dd HH:mm:ss, Asia/Seoul}:%-3relative] %clr(%-5level) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(reqUri=%X{requestURI}) $clr(reqId=%X{requestId}){yellow}: %msg%n
            </pattern>
        </encoder>


        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>/var/log/zypt/app-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <springProfile name="prod">
        <logger name="zypt.zyptapiserver" level="INFO"/>
    </springProfile>

    <springProfile name="dev">
        <logger name="zypt.zyptapiserver" level="DEBUG"/>
    </springProfile>

</configuration>